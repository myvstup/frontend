
h2   Score Form
md-content(layout, layout-wrap)
  div(ng-repeat="subject in vm.userData.subjects", flex='20', flex-offset='5', flex-xs='40')
    md-checkbox(ng-model='subject.isTested', aria-label='subject.caption') {{subject.caption}}
md-content(layout, layout-wrap)
  md-input-container.md-block(ng-repeat="subject in vm.userData.subjects", ng-if='subject.isTested', flex='25', flex-offset='5', flex-xs='90')
    label {{subject.caption}}
    input(type='number', step='any', name='rate', ng-model='subject.score', min='100', max='200')
md-input-container.md-block(flex='20', flex-offset='5', flex-xs='90')
  label Атестат (100-200)
  input(type='number', step='any', name='rate', ng-model='vm.userData.certificateScore', min='100', max='200')
